<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_item"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:elevation="15dp"
    android:scaleType="centerInside"
    android:background="@color/layoutBg_White"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/BookImageId1"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:contentDescription="@string/BIDescription"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/BookForwardIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/ic_forward_drawable"
        app:layout_constraintBottom_toTopOf="@id/BookBtnId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/BookTitleId"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.90"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/BookTitleId"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Ilorem ipsum"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/BookImageId1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/BookLevelId"
        app:layout_constraintHorizontal_bias="0.200"
        app:layout_constraintVertical_bias="0.30"
        />

    <TextView
        android:id="@+id/BookLevelId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bool level"
        android:textAlignment="viewStart"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintTop_toBottomOf="@id/BookTitleId"
        app:layout_constraintBottom_toTopOf="@id/BookDesId"
        app:layout_constraintStart_toEndOf="@id/BookImageId1"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/BookDesId"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:scrollHorizontally="false"
        android:textAlignment="viewStart"
        android:maxLength="30"
        android:text="Book description by that why my ry the ful t"
        app:layout_constraintTop_toBottomOf="@id/BookLevelId"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/BookImageId1" />

    <Button
        android:id="@+id/BookBtnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BtnTxt"
        android:background="@color/BtnColor_Orange"
        android:textColor="@color/textColor_White"
        android:padding="5dp"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>