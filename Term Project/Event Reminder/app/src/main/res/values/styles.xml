<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/LightGreen</item>
        <item name="colorPrimaryDark">@color/DarkGreen</item>
        <item name="colorAccent">#009900</item>
        <item name="android:navigationBarColor">#47A64A</item>
        <item name="actionBarPopupTheme">@style/PopupMenu</item>

    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>


    <style name="PopupMenu"
        parent="android:Theme.Holo.Light">
        <item name="android:textColor">@color/WhiteColor</item>
        <item name="android:background">@color/LightGreen</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/WhiteColor</item>
        <item name="colorPrimaryDark">@color/WhiteColor</item>
        <item name="colorAccent">#E86B0F</item>
        <item name="android:textColorPrimary">@color/WhiteColor</item>
        <item name="android:navigationBarColor">@color/WhiteColor</item>
    </style>


    <style name="AddReminderTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/LightGreen</item>
        <item name="colorPrimaryDark">@color/DarkGreen</item>
        <item name="colorAccent">#009900</item>
        <item name="android:navigationBarColor">#47A64A</item>
    </style>


    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!--  for the text of the toolbar  -->
        <item name="android:textColorPrimary">@color/WhiteColor</item>
        <!--  for the menu icons etc -->
        <item name="android:textColorSecondary">@color/WhiteColor</item>
    </style>

</resources>
